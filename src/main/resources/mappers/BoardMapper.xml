<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.board.BoardMapper">
    <insert id="insBoard" parameterType="BoardDto">
        INSERT INTO board
        (name,age,job,address,mobile)
        VALUES
        (#{name},#{age},#{job},#{address},#{mobile})
    </insert>

    <update id="upBoard" parameterType="BoardDto">
        UPDATE board
        SET name = #{name}
        , age = ${age}
        , job = #{job}
        , address = #{address}
        , mobile = #{mobile}
        WHERE idx = ${idx}
    </update>

    <delete id="delBoard" >
        Delete from board
        Where idx = #{idx}
    </delete>

    <select id="selAll" resultType="BoardVo">
        select * from board
    </select>



</mapper>
